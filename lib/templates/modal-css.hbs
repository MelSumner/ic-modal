ic-modal-screen,
ic-modal,
ic-modal-content,
ic-modal-title {
  display: block;
}

ic-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, .75);
}

ic-modal[is-open] {
  display: block;
}

ic-modal-content {
  position: relative;
  background: #fff;
  width: 800px;
  margin: 40px auto;
  padding: 0 20px 20px 20px;
  border: 1px solid #aaa;
  border-radius: 4px;
}

ic-modal-title {
  padding: 20px;
  margin: 0 -20px 20px;
  border-bottom: 1px solid #ccc;
  font-weight: 600;
}

.ic-modal-trigger.default {
  position: absolute;
  top: 16px;
  right: 20px;
  border: none;
  background: none;
  padding: 6px;
  font-size: 16px;
  cursor: pointer;
  color: #ccc;
}

.ic-modal-trigger.default:hover {
  color: #444;
}

.ic-modal-trigger.default:active {
  color: #000;
}


