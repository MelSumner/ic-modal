ic-modal,
.ic-modal-form {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: hsla(0, 0%, 100%, .75);
  display: none;
}

ic-modal-main {
  position: relative;
  max-height: 90%;
  width: 66%;
  margin: auto;
  background: #fff;
  border: 1px solid hsl(0, 0%, 70%);
  border-radius: 4px;
}

ic-modal-title {
  padding: 20px;
  border-bottom: 1px solid hsl(0, 0%, 85%);
}

ic-modal-footer {
  padding: 20px;
  border-top: 1px solid hsl(0, 0%, 85%);
}

ic-modal-content {
  overflow: auto;
  padding: 20px;
}

.ic-modal-trigger.default {
  position: absolute;
  top: 10px;
  right: 10px;
  border: none;
  background: none;
  padding: 6px;
  font-size: 18px;
  color: inherit;
}

.ic-modal-trigger.default:focus {
  text-shadow: 0 0 6px hsl(208, 47%, 60%),
    0 0 2px hsl(208, 47%, 60%),
    0 0 2px hsl(208, 47%, 60%),
    0 0 1px hsl(208, 47%, 60%);
  outline: none;
}

@media only screen and (max-width : 480px) {
  ic-modal-main {
    width: 95%;
    max-height: 95%;
  }
  ic-modal-title,
  ic-modal-footer,
  ic-modal-content {
    padding: 10px;
  }

  .ic-modal-trigger.default {
    top: 0px;
    right: 2px;
  }
}

