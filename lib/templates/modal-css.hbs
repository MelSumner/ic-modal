ic-modal-screen,
ic-modal,
ic-modal-content {
  display: block;
}

ic-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, .75);
}

ic-modal[is-open] {
  display: block;
}

ic-modal-content {
  background: #fff;
  width: 800px;
  margin: 40px auto;
}


