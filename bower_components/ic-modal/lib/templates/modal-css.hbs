ic-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: hsla(0, 0%, 100%, .75);
  display: none;
  align-items: center;
}

ic-modal[is-open] {
  display: flex;
}

ic-modal-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-content: stretch;
  max-height: 90%;
  width: 66%;
  margin: auto;
  background: #fff;
  border: 1px solid hsl(0, 0%, 70%);
  border-radius: 4px;
}

ic-modal-title {
  flex: 0 0 auto;
  padding: 20px;
  border-bottom: 1px solid hsl(0, 0%, 85%);
}

ic-modal-main {
  flex: 0 1 auto;
  overflow: auto;
  padding: 20px;
}

.ic-modal-trigger.default {
  position: absolute;
  top: 10px;
  right: 10px;
  border: none;
  background: none;
  padding: 6px;
  font-size: 18px;
  color: inherit;
}

.ic-modal-trigger.default:focus {
  text-shadow: 0 0 6px hsl(208, 47%, 60%),
    0 0 2px hsl(208, 47%, 60%),
    0 0 2px hsl(208, 47%, 60%),
    0 0 1px hsl(208, 47%, 60%);
  outline: none;
}

@media only screen and (max-width : 480px) {
  ic-modal-content {
    width: 95%;
  }
  ic-modal-title,
  ic-modal-main {
    padding: 10px;
  }

  .ic-modal-trigger.default {
    top: 0px;
    right: 2px;
  }
}


